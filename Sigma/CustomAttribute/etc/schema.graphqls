type Query {
    customAttribute(sku: String! @doc(description: "The SKU of the product")): ProductDetails @resolver(class: "Sigma\\CustomAttribute\\Model\\Resolver\\CustomAttributeResolver") @doc(description: "Retrieve the value of the custom attribute for a product")
}

type ProductDetails {
        sku:String
        label: String
        id: Int
        price: Float
        color: String
    }
}
